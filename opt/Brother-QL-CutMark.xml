<option type='enum' id='Brother-QL-CutMark'>
  <arg_longname>
    <en>Cut Mark</en>
  </arg_longname>
  <arg_shortname>
    <en>CutMark</en><!-- backends only know <en> shortnames! -->
  </arg_shortname>
  <arg_execution>
    <arg_group>Finishing</arg_group>
    <arg_order>110</arg_order>
    <arg_spot>A</arg_spot>
    <arg_postscript />
    <arg_proto>&lt;&lt;/CutMedia %s&gt;&gt;setpagedevice</arg_proto>
  </arg_execution>
  <constraints>
    <constraint sense='true'>
      <driver>ptouch-ql</driver>
    </constraint>
    <constraint sense='false'>
      <driver>ptouch-ql</driver>
      <printer>printer/Brother-QL-550</printer>
    </constraint>
    <constraint sense='false'>
      <driver>ptouch-ql</driver>
      <printer>printer/Brother-QL-650TD</printer>
    </constraint>
  </constraints>
  <enum_vals>
   <enum_val id="ev/Off">
    <ev_longname>
     <en>Do not print cut marks</en>
    </ev_longname>
    <ev_shortname>
     <en>Off</en>
    </ev_shortname>
    <ev_driverval>0</ev_driverval>
   </enum_val>
   <enum_val id="ev/LabelEnd">
    <ev_longname>
     <en>Print cut mark after each label</en>
    </ev_longname>
    <ev_shortname>
     <en>LabelEnd</en>
    </ev_shortname>
    <ev_driverval>4</ev_driverval>
   </enum_val>
   <enum_val id="ev/JobEnd">
    <ev_longname>
     <en>Print cut mark at the end of the job</en>
    </ev_longname>
    <ev_shortname>
     <en>JobEnd</en>
    </ev_shortname>
    <ev_driverval>2</ev_driverval>
   </enum_val>
  </enum_vals>
</option>
