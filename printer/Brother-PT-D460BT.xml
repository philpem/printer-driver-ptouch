<printer id="printer/Brother-PT-D460BT">
  <make>Brother</make>
  <model>PT-D460BT</model>
  <pcmodel>PT-D460BT</pcmodel>
  <mechanism>
    <thermal/>
    <!--not "color"-->
    <resolution>
      <dpi>
        <x>360</x>
        <y>360</y>
      </dpi>
    </resolution>
  </mechanism>
  <url>https://www.brother.co.uk/support/PT-D460BT/</url>
  <lang>
    <proprietary />
  </lang>
  <autodetect>
    <general>
      <ieee1284>MFG:Brother;CMD:PT-CBP;MDL:PT-D460BT;CLS:PRINTER;CID:Brother PT Type2;</ieee1284>
      <commandset>PT-CBP</commandset>
      <description>Brother PT-D460BT</description>
      <manufacturer>Brother</manufacturer>
      <model>PT-D460BT</model>
    </general>
  </autodetect>
  <functionality>D</functionality>
  <driver>ptouch-pt</driver>
  <!--no "contrib_url"-->
  <comments>
    <en>
    Tape width 3.5mm to 18mm.
    Prints 20mm (batteries) / 30mm (AC adapter) per second.
    Manual cutter.
    </en>
  </comments>
  <select>
    <option id="opt/Brother-PTQL-TransferMode" />
    <option id="opt/Brother-PTQL-Resolution">
      <enum_val id="ev/360dpi" />
    </option>
    <option id="opt/Brother-PTQL-BytesPerLine">
      <enum_val id="ev/16" />
    </option>
    <option id="opt/Brother-PTQL-LabelPreamble" />
    <option id="opt/Brother-PT-LabelRecovery" />
    <option id="opt/Brother-PTQL-LastPageFlag" />
    <option id="opt/Brother-PT-PageSize">
      <arg_defval>ev/tz-18</arg_defval>
      <enum_val id="ev/tz-4" />
      <enum_val id="ev/tz-6" />
      <enum_val id="ev/tz-9" />
      <enum_val id="ev/tz-12" />
      <enum_val id="ev/tz-18" />
      <enum_val id="ev/tz-18x50" />
      <enum_val id="ev/tz-18x25" />
      <enum_val id="ev/Custom" />
    </option>
  </select>
</printer>
